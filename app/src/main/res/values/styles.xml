<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="preferenceTheme">@style/PreferenceThemeOverlay</item>
    </style>

    <style name="LauncherAppTheme" parent="@style/AppTheme">
        <item name="android:windowBackground">@drawable/launch_screen</item>
    </style>

    <style name="TagView" parent="@style/Widget.TagView">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Caption</item>
        <item name="android:maxLines">2</item>
        <item name="android:textColor">?android:attr/textColorPrimaryInverse</item>
        <item name="android:ellipsize">end</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="tagUppercase">false</item>
        <item name="tagCornerRadius">4dp</item>
        <item name="tagColor">#eee</item>
        <item name="tagPrefix">" "</item>
        <item name="tagSeparator">" "</item>
    </style>

    <style name="TextAppearance.AppTheme.Body1.Inverse" parent="@style/TextAppearance.AppCompat.Body1">
        <item name="android:textColor">?android:attr/textColorPrimaryInverse</item>
    </style>

    <style name="TextAppearance.AppTheme.Body1.Secondary" parent="@style/TextAppearance.AppCompat.Body1">
        <item name="android:textColor">?android:attr/textColorSecondary</item>
    </style>

    <style name="TextAppearance.AppTheme.Body1.Secondary.Inverse" parent="@style/TextAppearance.AppCompat.Body1">
        <item name="android:textColor">?android:attr/textColorSecondaryInverse</item>
    </style>

    <style name="TextAppearance.AppCompat.Caption.Secondary.Inverse" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textColor">?android:attr/textColorSecondaryInverse</item>
    </style>

    <style name="Widget.AppTheme.BottomSheet.Button" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:textAllCaps">false</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:drawablePadding">32dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingEnd">16dp</item>
    </style>
</resources>
